# Application Settings
APP_NAME=FraudDetectionSystem
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-base64

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fraud_detection
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/fraud_detection

# Privacy Settings
DIFFERENTIAL_PRIVACY_EPSILON=1.0
DIFFERENTIAL_PRIVACY_DELTA=1e-5
PRIVACY_BUDGET_LIMIT=10.0
ENABLE_FEDERATED_LEARNING=false

# Model Configuration
MODEL_PATH=./models
MODEL_REFRESH_INTERVAL=3600
ENABLE_ONLINE_LEARNING=true
MIN_SAMPLES_FOR_RETRAINING=10000

# Fraud Detection Thresholds
DEFAULT_FRAUD_THRESHOLD=0.75
HIGH_RISK_THRESHOLD=0.90
LOW_RISK_THRESHOLD=0.50
MAX_TRANSACTION_AMOUNT=100000

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
METRICS_EXPORT_INTERVAL=60
ALERT_WEBHOOK_URL=https://your-alert-webhook.com

# Feature Store
FEATURE_STORE_TYPE=redis
FEATURE_TTL_SECONDS=86400

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Compliance & Audit
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=./logs/audit
RETENTION_DAYS=2555

# Cloud Provider (Optional)
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=fraud-detection-models

# Model Explainability
ENABLE_SHAP_EXPLANATIONS=true
MAX_SHAP_SAMPLES=1000
ENABLE_LIME_EXPLANATIONS=true
